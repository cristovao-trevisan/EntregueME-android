    android:layout_height="fill_parent"
    android:orientation="vertical" >
    <fragment android:name="com.example.cristovao.entregueme.ShowActiveListsFragment"
        android:id="@+id/show_active_lists_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment android:name="com.example.cristovao.entregueme.ShowNotFinishedListsFragment"
        android:id="@+id/show_not_finished_lists_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    <fragment android:name="com.example.cristovao.entregueme.ShowFinishedListsFragment"
        android:id="@+id/show_finished_lists_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>